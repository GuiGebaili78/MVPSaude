@model Fiap.Web.MVPSaude.Models.MedicoModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Médico - Editar</title>
</head>
<body>
    <h1>Médico - Editar</h1>

    <!-- formulário HTML com Tag Helpers-->
    <form asp-action="Editar" asp-controller="Medico" method="post">

        <!-- Campo oculto para guardar qual Id (chave) do registro alterado -->
        <input type="hidden" asp-for="MedicoId" />
        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                <label>Nome:</label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="NomeMedico" />
                </div>
            </div>

            <div class="form-group">
                <label>Crm:</label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="Crm" />
                </div>
            </div>

           <div class="form-group">
                <label>Especialidade:</label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="Especialidade" />
                </div>
            </div>

            <div class="form-group">
                <label>Contato:</label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="Contato" />
                </div>
            </div>

                       <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a class="button" asp-controller="Medico" asp-action="Index" class="btn btn-warning">Voltar</a>
                    <input type="submit" value="Gravar" class="btn btn-primary" />
                </div>
            </div>
            <hr />
        </div>
    </form>

</body>
</html>
