@model Fiap.Web.MVPSaude.Models.ConsultaModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Consulta - Cadastrar</title>

</head>
<body>
    <h1>Consulta - Cadastrar</h1>

    <!-- formulário HTML com Tag Helpers-->
    <form asp-action="Cadastrar" asp-controller="Consulta" method="post">
        <div class="form-horizontal">
            <hr />
            <!-- Trecho de validação para se existe mensagem a ser exibida -->
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <!-- Tag para exibição da lista de erros -->
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            <div class="form-group">
                <label>Paciente:</label>
                <select asp-for="PacienteId" asp-items="@ViewBag.pacientes" class="form-control col-2">
                    <option value="">Selecione</option>
                </select>
                <span class="text-danger" asp-validation-for="PacienteId"></span>
            </div>


            <div class="form-group">
                <label>Médico:</label>
                <select asp-for="MedicoId" asp-items="@ViewBag.medicos" class="form-control col-2">
                    <option value="">Selecione</option>
                </select>
                <span class="text-danger" asp-validation-for="MedicoId"></span>
            </div>

            <div class="form-group">
                <label>Data Consulta:</label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="DataConsulta" /> 
                </div>
            </div>

            <div class="form-group">
                <label asp-for="HoraConsulta" class="control-label"></label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="HoraConsulta" />
                    <!-- Bloco para exibir mensagem de erro -->
                    <span asp-validation-for="HoraConsulta" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="LocalConsulta" class="control-label"></label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="LocalConsulta" />
                    <!-- Bloco para exibir mensagem de erro -->
                    <span asp-validation-for="LocalConsulta" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Mensagem" class="control-label"></label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="Mensagem" />
                    <!-- Bloco para exibir mensagem de erro -->
                    <span asp-validation-for="Mensagem" class="text-danger"></span>
                </div>

                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="button" asp-controller="Consulta" asp-action="Index" class="btn btn-warning">Voltar</a>
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    </div>
                </div>
                <hr />
            </div>
    </form>

</body>
</html>