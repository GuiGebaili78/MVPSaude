@model Fiap.Web.MVPSaude.Models.ConsultaModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Consulta - Consultar</title>
</head>
<body>
    <h1>Consulta - Consultar</h1>

    <div class="form-horizontal">
        <hr />
        

        <div class="form-group">
            <label>Paciente:</label>
            <select asp-for="PacienteId" asp-items="@ViewBag.pacientes" class="form-control col-2">
                <option value="">Selecione</option>
            </select>
            <span class="text-danger" asp-validation-for="PacienteId"></span>
        </div>

        <div class="form-group">
            <label>Médico:</label>
            <select asp-for="MedicoId" asp-items="@ViewBag.medicos" class="form-control col-2">
                <option value="">Selecione</option>
            </select>
            <span class="text-danger" asp-validation-for="MedicoId"></span>
        </div>

        <div class="form-group">
            <label>Data Consulta:</label>
            <div class="col-md-10">
                <!-- Caixa de Texto -->
                <input asp-for="DataConsulta" /> 
            </div>
        </div>

        <div class="form-group">
            <label><b>Hora Consulta:</b></label>
            <div class="col-md-10">
                <span>@Model.HoraConsulta</span>
            </div>
        </div>

        <div class="form-group">
            <label><b>Local:</b></label>
            <div class="col-md-10">
                <span>@Model.LocalConsulta</span>
            </div>
        </div>
        <div class="form-group">
            <label><b>Mensagem:</b></label>
            <div class="col-md-10">
                <span>@Model.Mensagem</span>
            </div>
       
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                    <a class="button" asp-controller="Consulta" asp-action="Index" class="btn btn-warning">Voltar</a>
            </div>
        </div>
        <hr />
    </div>

</body>
</html>
