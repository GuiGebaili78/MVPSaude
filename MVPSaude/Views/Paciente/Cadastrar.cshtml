@model Fiap.Web.MVPSaude.Models.PacienteModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Paciente - Cadastrar</title>
</head>
<body>
    <h1>Paciente - Cadastrar</h1>

    <!-- formulário HTML com Tag Helpers-->
    <form asp-action="Cadastrar" asp-controller="Paciente" method="post">
        <div class="form-horizontal">
            <hr />
            <!-- Trecho de validação para se existe mensagem a ser exibida -->
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <!-- Tag para exibição da lista de erros -->
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            <div class="form-group">
                <label asp-for="NomePaciente" class="control-label"></label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="NomePaciente" />
                    <!-- Bloco para exibir mensagem de erro -->
                    <span asp-validation-for="NomePaciente" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="Cpf" />
                    <!-- Bloco para exibir mensagem de erro -->
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label>Data Nascimento:</label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="DataNascimento" /> (MM/DD/AAAA)
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="Genero" />
                    <!-- Bloco para exibir mensagem de erro -->
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="Endereco" />
                    <!-- Bloco para exibir mensagem de erro -->
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Contato" class="control-label"></label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="Contato" />
                    <!-- Bloco para exibir mensagem de erro -->
                    <span asp-validation-for="Contato" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a asp-controller="Paciente" asp-action="Index" class="btn btn-warning">Voltar</a>
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </div>
            <hr />
        </div>
    </form>

</body>
</html>
