@model Fiap.Web.MVPSaude.Models.PacienteModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Paciente - Consultar</title>
</head>
<body>
    <h1>Paciente - Consultar</h1>

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label><b>Id</b></label>
            <div class="col-md-10">
                <span>@Model.PacienteId</span>
            </div>
        </div>

        <div class="form-group">
            <label><b>Nome</b></label>
            <div class="col-md-10">
                <span>@Model.NomePaciente</span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2"><b>Cpf</b></label>
            <div class="col-md-10">
                <span>@Model.Cpf</span>
            </div>
        </div>

        <div class="form-group">
            <label>Data Nascimento:</label>
            <div class="col-md-10">
                <!-- Caixa de Texto -->
                <input asp-for="DataNascimento" /> (MM/DD/AAAA)
            </div>
        </div>

        <div class="form-group">
            <label><b>Nome</b></label>
            <div class="col-md-10">
                <span>@Model.Endereco</span>
            </div>
        </div>

        <div class="form-group">
            <label><b>Nome</b></label>
            <div class="col-md-10">
                <span>@Model.Contato</span>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a asp-controller="Paciente" asp-action="Index" class="btn btn-warning">Voltar</a>
            </div>
        </div>
        <hr />
    </div>

</body>
</html>
